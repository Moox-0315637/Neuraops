# ==================================================================================
# NeuraOps Agent - Configuration Environment
# Copy to .env and customize for your environment
# ==================================================================================

# ====== CONNECTION À NEURAOPS CORE ======
NEURAOPS_CORE_URL=http://localhost:8000
NEURAOPS_AUTH_TOKEN=your-agent-authentication-token-here

# ====== AGENT CONFIGURATION ======  
AGENT_NAME=docker-agent
AGENT_HOSTNAME=docker-host
LOG_LEVEL=INFO
METRICS_INTERVAL=30

# ====== SÉCURITÉ ======
# Activer/désactiver le sandbox pour les commandes
SANDBOX_COMMANDS=true

# ====== MONITORING CUSTOMIZATION ======
# Intervals en secondes
HEARTBEAT_INTERVAL=60
METRICS_COLLECT_INTERVAL=30
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=7

# ====== CAPABILITIES SYSTÈME ======
# Activer monitoring Docker (nécessite /var/run/docker.sock)
ENABLE_DOCKER_MONITORING=true

# Activer monitoring réseau avancé
ENABLE_NETWORK_MONITORING=true

# Activer collecte logs système
ENABLE_SYSTEM_LOGS=true

# ====== ADVANCED SETTINGS ======
# Maximum de commandes concurrentes
MAX_CONCURRENT_COMMANDS=5

# Timeout par défaut pour les commandes (secondes)
DEFAULT_COMMAND_TIMEOUT=300

# Taille maximum des logs par commande (bytes)
MAX_COMMAND_OUTPUT_SIZE=1048576