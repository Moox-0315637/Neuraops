# NeuraOps Agent Environment Configuration
# Copy this file to .env and configure for your environment

# ====================================
# CORE CONNECTION
# ====================================
NEURAOPS_CORE_URL=http://localhost:8000
NEURAOPS_AUTH_TOKEN=your-agent-authentication-token-here

# ====================================
# AGENT CONFIGURATION
# ====================================
AGENT_NAME=my-agent
AGENT_HOSTNAME=my-hostname
LOG_LEVEL=INFO
METRICS_INTERVAL=30

# ====================================
# SECURITY
# ====================================
# Enable/disable command sandboxing
SANDBOX_COMMANDS=true

# ====================================
# MONITORING CONFIGURATION
# ====================================
# Intervals in seconds
HEARTBEAT_INTERVAL=60
METRICS_COLLECT_INTERVAL=30
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=7

# ====================================
# SYSTEM CAPABILITIES
# ====================================
# Enable Docker monitoring (requires /var/run/docker.sock)
ENABLE_DOCKER_MONITORING=true

# Enable advanced network monitoring
ENABLE_NETWORK_MONITORING=true

# Enable system log collection
ENABLE_SYSTEM_LOGS=true

# ====================================
# ADVANCED SETTINGS
# ====================================
# Maximum concurrent commands
MAX_CONCURRENT_COMMANDS=5

# Default command timeout (seconds)
DEFAULT_COMMAND_TIMEOUT=300

# Maximum command output size (bytes)
MAX_COMMAND_OUTPUT_SIZE=1048576